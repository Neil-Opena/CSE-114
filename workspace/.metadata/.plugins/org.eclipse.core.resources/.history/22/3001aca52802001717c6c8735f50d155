import java.util.*;

public class RunLengthEncoding {

	public static void main(String[] args) {
		Scanner myScanner = new Scanner(System.in);
		System.out.print("Enter a string to endode:");
		String message = myScanner.next();

		System.out.print("Enter the delimeter");
		char delimeter = myScanner.next().charAt(0);

		System.out.print(encode(message, delimeter));
	}

	public static String encode(String message, char delimeter) {
		String encoded = "";
		char[] letters = new char[message.length()];
		for (int i = 0; i < message.length() - 1; i++) {
			letters[i] = message.charAt(i);
		}
		letters[message.length() - 1] = message.charAt(message.length() - 1);

		//copy letters into another array
		char[] unmodifiedLetters = new char[letters.length];
		for(int i = 0; i < unmodifiedLetters.length; i++){
			unmodifiedLetters[i] = letters[i];
		}
		
		for (int i = 0; i < letters.length - 1; i++) {
			if (letters[i] == letters[i + 1]) {
				letters[i] = ' ';
			}
		}
		if(letters[letters.length - 2] == letters[letters.length - 1])
			letters[letters.length - 2] = ' ';
		
		String test = "";
		for(int i = 0; i < letters.length - 1; i++){
			if(letters[i] != letters[i + 1])
				test = test + letters[i];
		}
		if(letters[letters.length - 2] != letters[letters.length - 1])
			test = test + letters[letters.length - 1];
		System.out.println(test);
		
		
		
		
		
		//print array
		for (int i = 0; i < unmodifiedLetters.length; i++) {
			System.out.print(unmodifiedLetters[i] + " ");
		}
		System.out.println();
		// print array
		for (int i = 0; i < letters.length; i++) {
			System.out.print(letters[i] + " ");
		}
		
		int counter = 0;
		for(int i = 0; i < letters.length; i++){
			if(letters[i] != ' ')
				counter++;
		}
		
		

		return encoded;

	}

}
