public class Complex {
	private double a;
	private double b;
	
	public Complex(double a, double b){
		this.a = a;
		this.b = b;
	}
	
	public Complex(double a){
		this(a,0);
	}
	
	public Complex(){
		this(0);
	}
	
	public double getRealPart(){
		return a;
	}
	
	public double getImaginaryPart(){
		return b;
	}
	
	
	public Complex add(double c, double d){
		Complex total = new Complex(this.a + c, this.b + d);
		return total;
	}
	
	public Complex add(Complex i){
		Complex total = new Complex(this.a + i.getRealPart(), this.b + i.getImaginaryPart());
		return total;
	}
	//FIXME finish methods
	public Complex subtract(double c, double d){
		Complex total = new Complex(this.a - c,this.b - d);
		return total;
	}
	
	public Complex subtract(Complex i){
		Complex total = new Complex(this.a - i.getRealPart(),this.b - i.getImaginaryPart());
		return total;
	}
	
	public Complex multiply(double c, double d){
		Complex total = new Complex(this.a * c - this.b * d, this.b * c + this.a * d);
		return total;
	}
	
	public Complex multiply(Complex i){
		Complex total = new Complex(this.a * i.getRealPart() - this.b * i.getImaginaryPart(), this.b * i.getRealPart() + this.a * i.getImaginaryPart());
		return total;
	}
	
	public Complex divide(double c, double d){
		Complex total = new Complex();
		return total;
	}
	
	public Complex divide(Complex i){
		Complex total = new Complex();
		return total;
	}
	
	public String toString(){
		return b!=0?("" + a + " + " + b + "i"):("" + a);
	}
	
	
}
