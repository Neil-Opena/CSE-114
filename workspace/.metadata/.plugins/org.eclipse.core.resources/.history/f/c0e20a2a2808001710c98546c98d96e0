
public class Rectangle {

	private double width = 1, height = 1;
	public Rectangle(){
	}
	
	public double getWidth(){
		return width;
	}
	
	public double getHeight(){
		return height;
	}
	
	public Rectangle(double width, double height){
		this.width = width;
		this.height = height;
	}
	
	public double getArea(){
		return width * height;
	}
	
	public double getPerimeter(){
		return width * 2 + height * 2;
	}
	
	
	public static void main(String[] args){
		Rectangle a = new Rectangle(4, 40);
		Rectangle b = new Rectangle(3.5, 35.9);
		System.out.println("The area of a " + a.width + " x " + a.height + " is " + a.getArea());
		System.out.println("The perimeter of a " + a.width + " x " + a.height + " is " + a.getPerimeter());
		System.out.println("The area of a " + b.width + " x " + b.height + " is " + b.getArea());
		System.out.println("The perimeter of a " + b.width + " x " + b.height + " is " + b.getPerimeter());

	}
}
