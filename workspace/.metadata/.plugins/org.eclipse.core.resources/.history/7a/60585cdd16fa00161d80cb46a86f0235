import java.util.*;
public class test {
	public static void main(String[] args){
		Scanner myScanner = new Scanner(System.in);
		System.out.println("Enter an integer n:");
		
		int n = myScanner.nextInt();
		
		for(int i = 1; i <= n; i++){
			for(int j = n-i; j > 0; j--){
				System.out.print(" " + " ");
			}
			
			for(int k = i; k > 0; k--){
				System.out.print(k + " ");
			}System.out.println();
		}
	}
}
