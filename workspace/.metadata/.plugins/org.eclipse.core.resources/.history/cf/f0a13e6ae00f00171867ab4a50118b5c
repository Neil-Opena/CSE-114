
public class Triangle {

	private double side1 = 0;
	private double side2 = 0;
	private double side3 = 0;
	private String color = "white";
	private boolean isFilled = false;
	
	public Triangle() {

	}

	public Triangle(double a, double b, double c,String d, boolean e) {
		side1 = a;
		side2 = b;
		side3 = c;
		color = d;
		isFilled = e;
	}

	public double getSide1() {
		return side1;
	}

	public double getSide2() {
		return side2;
	}

	public double getSide3() {
		return side3;
	}
	
	
	public double getArea(){
		double p = this.getPerimeter();
		double area = Math.sqrt(p*(p -a)*(p-b)*(p-c));
		return area;
	}
	
	public double getPerimeter(){
		double perimeter = side1 + side2 + side3;
		return perimeter;
	}
	
	public String toString(){
		return "Area: " + this.getArea() + "Perimeter: " + this.getPerimeter() + "Color: " + color + "isFilled: " + isFilled;
	}
	
	public static void main(String[] args){
		System.out.println("Triangle(1,1.5,1)");
		Triangle test = new Triangel(1,1.5,1,"yellow",true);
		System.out.println(test.toString());
	}
}
