import java.util.*;

public class RunLengthEncoding {

	public static void main(String[] args) {
		Scanner myScanner = new Scanner(System.in);
		System.out.print("Enter a string to endode:");
		String message = myScanner.next();

		System.out.print("Enter the delimeter");
		char delimeter = myScanner.next().charAt(0);

		System.out.print(encode(message, delimeter));
	}

	public static String encode(String message, char delimeter) {
		String encoded = "";
				
		String test = "" + message.charAt(0);
		for(int i = 0; i < message.length() - 1; i++){
			if(message.charAt(i) != message.charAt(i + 1))
				test = test + message.charAt(i + 1);
		}
		if(message.charAt(message.length() - 2) != message.charAt(message.length() - 1))
			test = test + message.charAt(message.length() - 1);
		System.out.println(test);
		System.out.println(test.length());
		
		String[] diffLetters = new String[test.length()];
		
		//put in string array substrings of letters
		for(int i = 0; i < diffLetters.length - 1; i++){
			diffLetters[i] = message.substring(test.charAt(i), test.charAt(i + 1));
		}
		
		//do last two letters
		
		
		for(int i = 0; i < diffLetters.length; i++){
			System.out.print(diffLetters[i] + " ");
		}
		

		return encoded;

	}

}
